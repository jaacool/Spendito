{
  "name": "spendito",
  "version": "1.0.0",
  "author": "Spendito Team",
  "description": "Spendito - Deine Finanzen im Griff",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "electron": "electron .",
    "build:web": "expo export",
    "build:windows": "npm run build:web && electron-builder --win",
    "build:macos": "npm run build:web && electron-builder --mac",
    "build:all": "npm run build:web && electron-builder --win --mac"
  },
  "build": {
    "appId": "com.spendito.app",
    "productName": "Spendito",
    "extraMetadata": {
      "main": "electron-main.js"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.finance"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@react-native-async-storage/async-storage": "2.2.0",
    "date-fns": "^4.1.0",
    "expo": "~54.0.25",
    "expo-constants": "~18.0.10",
    "expo-document-picker": "^14.0.8",
    "expo-file-system": "^19.0.21",
    "expo-linking": "~8.0.9",
    "expo-router": "~6.0.15",
    "expo-sharing": "^14.0.8",
    "expo-status-bar": "~3.0.8",
    "lucide-react-native": "^0.555.0",
    "nativewind": "^4.2.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.15.1",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "^0.7.1",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
